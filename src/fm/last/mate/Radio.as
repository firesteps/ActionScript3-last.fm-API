:faultHandlers&gt; *              &lt;MethodInvoker generator="{AppController}" method="faultHandler" *                                arguments="{[fault]}" /&gt; *          &lt;/lfm:faultHandlers&gt; *		&lt;/lfm:Radio&gt; * &lt;/EventHandlers&gt; * </listing> * * @mxml * <p>The <code>&lt;Radio&gt;</code> tag has following tag attributes:</p> * <pre> * &lt;Radio * <b>Properties</b> * method='String' * session='ILFMSession' * discovery='Boolean' * rtp='Number' * bitrate='Number' * buylinks='Boolean' * speed_multiplier='Number' * station='String' * lang='String' * /&gt; * </pre> * * @see fm.last.as3.LFMRadio */public class Radio extends LFMServiceInvoker {	public var dicovery:Boolean;	public var rtp:Boolean;	public var bitrate:Number;	public var buylinks:Boolean;	public var speed_multiplier:Number;	public var station:String;	public var lang:String;	private var _radio:LFMRadio;	[Inspectable(enumeration='getPlaylist,tune')]	/**	 * @inheritDoc	 */	override public function get method():String { return super.method; }	/**	 * @private	 */	override protected function run(scope:IScope):void {		if (_radio)			_radio.session = getSession(scope);		else			_radio = new LFMRadio(getSession(scope));		switch (method) {			case'getPlaylist':				innerHandlersDispatcher =				_radio.getPlaylist(dicovery, rtp, bitrate, buylinks, speed_multiplier);				break;			case'tune':				innerHandlersDispatcher = _radio.tune(station, lang);				break;			default:			methodUndefined(scope);		}	}}}