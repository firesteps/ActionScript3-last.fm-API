    &lt;MethodInvoker generator="{AppController}" method="faultHandler" *                                arguments="{[fault]}" /&gt; *          &lt;/lfm:faultHandlers&gt; *		&lt;/lfm:Library&gt; * &lt;/EventHandlers&gt; * </listing> * * @mxml * <p>The <code>&lt;Library&gt;</code> tag has following tag attributes:</p> * <pre> * &lt;Library * <b>Properties</b> * method='String' * session='ILFMSession' * artist='String' * album='String' * track='String' * user='String' * limit='Number' * page='Number' * /&gt; * </pre> * * @see fm.last.as3.LFMLibrary */public class Library extends LFMServiceInvoker {	public var artist:String;	public var album:String;	public var track:String;	public var user:String;	public var limit:Number;	public var page:Number;	private var _library:LFMLibrary;	[Inspectable(enumeration='addAlbum,addArtist,addTrack,getAlbums,getArtists,getTracks')]	/**	 * @inheritDoc	 */	override public function get method():String { return super.method; }	/**	 * @private	 */	override protected function run(scope:IScope):void {		if (_library)			_library.session = getSession(scope);		else			_library = new LFMLibrary(getSession(scope));		switch (method) {			case'addAlbum':				innerHandlersDispatcher = _library.addAlbum(artist, album);				break;			case'addArtist':				innerHandlersDispatcher = _library.addArtist(artist);				break;			case'addTraack':				innerHandlersDispatcher = _library.addTrack(artist, track);				break;			case 'getAlbums':				innerHandlersDispatcher = _library.getAlbums(user, artist, limit, page);				break;			case 'getArtists':				innerHandlersDispatcher = _library.getArtists(user, limit, page);				break;			case 'getTracks':				innerHandlersDispatcher = _library.getTracks(user, artist, album, limit, page);				break;			default:				methodUndefined(scope);		}	}}}