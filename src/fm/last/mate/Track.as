;MethodInvoker generator="{AppController}" method="faultHandler" *                                arguments="{[fault]}" /&gt; *          &lt;/lfm:faultHandlers&gt; *		&lt;/lfm:Track&gt; * &lt;/EventHandlers&gt; * </listing> * * @mxml * <p>The <code>&lt;Track&gt;</code> tag has following tag attributes:</p> * <pre> * &lt;Track * <b>Properties</b> * method='String' * session='ILFMSession' * artist='String' * track='String' * tags='String' * mbid='String' * country='String' * fingerprintid='String' * username='String' * recipient='String' * tag='String' * limit='Number' * page='Number' * publicShare='Boolean' * message='String' * /&gt; * </pre> * * @see fm.last.as3.LFMTrack */public class Track extends LFMServiceInvoker {	public var artist:String;	public var track:String;	public var tags:String;	public var mbid:String;	public var country:String;	public var fingerprintid:String;	public var username:String;	public var recipient:String;	public var tag:String;	public var limit:Number;	public var page:Number;	public var publicShare:Boolean;	public var message:String;	private var _track:LFMTrack;	[Inspectable(enumeration='addTags,ban,getBuylinks,getFingerprintMetadata,getInfo,getSimilar,getTags,getTopFans,getTopTags,love,removeTag,search,share')]	/**	 * @inheritDoc	 */	override public function get method():String { return super.method; }	/**	 * @private	 */	override protected function run(scope:IScope):void {		if (_track)			_track.session = getSession(scope);		else			_track = new LFMTrack(getSession(scope));		switch (method) {			case'addTags':				innerHandlersDispatcher = _track.addTags(artist, track, tags);				break;			case'ban':				innerHandlersDispatcher = _track.ban(artist, track);				break;			case'getBuylinks':				innerHandlersDispatcher = _track.getBuylinks(artist, track, mbid, country);				break;			case'getFingerprintMetadata':				innerHandlersDispatcher = _track.getFingerprintMetadata(fingerprintid);				break;			case'getInfo':				innerHandlersDispatcher = _track.getInfo(artist, track, mbid, username);				break;			case'getSimilar':				innerHandlersDispatcher = _track.getSimilar(artist, track, mbid);				break;			case'getTags':				innerHandlersDispatcher = _track.getTags(artist, track);				break;			case'getTopFans':				innerHandlersDispatcher = _track.getTopFans(artist, track, mbid);				break;			case'getTopTags':				innerHandlersDispatcher = _track.getTopTags(artist, track, mbid);				break;			case'love':				innerHandlersDispatcher = _track.love(artist, track);				break;			case'removeTag':				innerHandlersDispatcher = _track.removeTag(artist, track, tag);				break;			case'search':				innerHandlersDispatcher = _track.search(track, artist, limit, page);				break;			case'share':				innerHandlersDispatcher = _track.share(artist, track, recipient, publicShare, message);				break;			default:				methodUndefined(scope);		}	}}}