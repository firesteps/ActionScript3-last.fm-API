t;MethodInvoker generator="{AppController}" method="faultHandler" *                                arguments="{[fault]}" /&gt; *          &lt;/lfm:faultHandlers&gt; *		&lt;/lfm:Album&gt; * &lt;/EventHandlers&gt; * </listing> * * @mxml * <p>The <code>&lt;Album&gt;</code> tag has following tag attributes:</p> * <pre> * &lt;Album * <b>Properties</b> * method='String' * session='ILFMSession' * artist='String' * album='String ' * tags='String ' * mbid='String ' * tag='String ' * country='String ' * lang='String ' * limit='Number' * page='Number' * recipient='String ' * message='String ' * publicShare='Boolean' * autocorrect='String' * /&gt; * </pre> * * @see fm.last.as3.LFMAlbum */public final class Album extends LFMServiceInvoker {	public var artist:String;	public var album:String;	public var tags:String;	public var mbid:String;	public var tag:String;	public var country:String;	public var lang:String	public var limit:Number;	public var page:Number;	public var recipient:String;	public var message:String;	public var publicShare:Boolean;	public var autocorrect:String;	private var _album:LFMAlbum;	[Inspectable(enumeration='addTags,getBuylinks,getInfo,getShouts,getTags,getTopTags,removeTag,search,share')]	/**	 * @inheritDoc	 */	override public function get method():String { return super.method; }	/**	 * @private	 */	override protected function run(scope:IScope):void {		if (_album)			_album.session = getSession(scope);		else			_album = new LFMAlbum(getSession(scope));						switch (method) {			case'addTags':				innerHandlersDispatcher = _album.addTags(artist, album, tags);				break;			case 'getBuylinks':				innerHandlersDispatcher = _album.getBuylinks(artist, album, mbid, country, autocorrect);				break;			case'getInfo':				innerHandlersDispatcher = _album.getInfo(artist, album, mbid, lang, autocorrect);				break;			case'getShouts':				innerHandlersDispatcher = _album.getShouts(artist, mbid, limit, page, autocorrect);			case'getTags':				innerHandlersDispatcher = _album.getTags(artist, album, autocorrect);				break;			case'getTopTags':				innerHandlersDispatcher = _album.getTopTags(artist, album, autocorrect);				break;			case'removeTag':				innerHandlersDispatcher = _album.removeTag(artist, album, tag);				break;			case'search':				innerHandlersDispatcher = _album.search(album, limit, page);				break;			case'share':				innerHandlersDispatcher = _album.share(artist, album, recipient, message, publicShare);				break;			default:				methodUndefined(scope);		}	}}}