 generator="{AppController}" method="faultHandler" *                                arguments="{[fault]}" /&gt; *          &lt;/lfm:faultHandlers&gt; *		&lt;/lfm:Artist&gt; * &lt;/EventHandlers&gt; * </listing> * * @mxml * <p>The <code>&lt;Artist&gt;</code> tag has following tag attributes:</p> * <pre> * &lt;Artist * <b>Properties</b> * method='String' * session='ILFMSession' * artist="String" * tags='String ' * page='Number' * limit='Number' * order='String ' * mbid='String ' * lang='String ' * tag='String ' * recipient='String ' * message='String ' * publicShared='Boolean' * autocorrect='String' * /&gt; * </pre> * * @see fm.last.as3.LFMArtist */public final class Artist extends LFMServiceInvoker {	public var artist:String;	public var tags:String;	public var page:Number;	public var limit:Number;	public var order:String;	public var mbid:String;	public var lang:String;	public var tag:String;	public var recipient:String;	public var message:String;	public var publicShared:Boolean;	public var autocorrect:String;	private var _artist:LFMArtist;	[Inspectable(enumeration='addTags,getCorrection,getEvents,getImages,getInfo,getPastIvents,getPodcast,getShouts,getSimilar,getTags,getTopAlbums,getTopFans,getTopTags,getTopTracks,removeTag,search,share,shout')]	/**	 * @inheritDoc	 */	override public function get method():String { return super.method; }	/**	 * @private	 */	override protected function run(scope:IScope):void {		if (_artist)			_artist.session = getSession(scope);		else			_artist = new LFMArtist(getSession(scope));		switch (method) {			case'addTags':				innerHandlersDispatcher = _artist.addTags(artist, tags);				break;			case'getCorrection':				innerHandlersDispatcher = _artist.getCorrection(artist);				break;			case'getEvents':				innerHandlersDispatcher = _artist.getEvents(artist, autocorrect);				break;			case'getImages':				innerHandlersDispatcher = _artist.getImages(artist, page, limit, order, autocorrect);			case'getInfo':				innerHandlersDispatcher = _artist.getInfo(artist, mbid, lang, autocorrect);				break;			case'getPastEvents':				innerHandlersDispatcher = _artist.getPastEvents(artist, page, limit, autocorrect);				break;			case'getPodcast':				innerHandlersDispatcher = _artist.getPodcast(artist, autocorrect);				break;			case'getShouts':				innerHandlersDispatcher = _artist.getShouts(artist, limit, page, autocorrect);				break;			case'getSimilar':				innerHandlersDispatcher = _artist.getSimilar(artist, limit, autocorrect);				break;			case'getTags':				innerHandlersDispatcher = _artist.getTags(artist, autocorrect);				break;			case'getTopAlbums':				innerHandlersDispatcher = _artist.getTopAlbums(artist, autocorrect);				break;			case'getTopFans':				innerHandlersDispatcher = _artist.getTopFans(artist, autocorrect);				break;			case'getTopTags':				innerHandlersDispatcher = _artist.getTopTags(artist, autocorrect);				break;			case'getTopTracks':				innerHandlersDispatcher = _artist.getTopTracks(artist, autocorrect);				break;			case'removeTag':				innerHandlersDispatcher = _artist.removeTag(artist, tag);				break;			case'serach':				innerHandlersDispatcher = _artist.search(artist, limit, page);				break;			case'share':				innerHandlersDispatcher = _artist.share(artist, recipient, message, publicShared);				break;			default:				methodUndefined(scope);		}	}}}