   &lt;MethodInvoker generator="{AppController}" method="faultHandler" *                                arguments="{[fault]}" /&gt; *          &lt;/lfm:faultHandlers&gt; *		&lt;/lfm:LFMEvent&gt; * &lt;/EventHandlers&gt; * </listing> * * @mxml * <p>The <code>&lt;LFMEvent&gt;</code> tag has following tag attributes:</p> * <pre> * &lt;LFMEvent * <b>Properties</b> * method='String' * session='ILFMSession' * event='Number' * status='uint' * recipient='String' * publicShare='Boolean' * message='String' * /&gt; * </pre> * * @see fm.last.as3.LFMEvent */public class LFMEvent extends LFMServiceInvoker {	public var event:Number;	public var status:uint;	public var recipient:String;	public var publicShare:Boolean;	public var message:String;	private var _event:fm.last.as3.LFMEvent;	[Inspectable(enumeration='attend,getAttendees,getInfo,getShouts,share,shout')]	/**	 * @inheritDoc	 */	override public function get method():String { return super.method; }	/**	 * @private	 */	override protected function run(scope:IScope):void {		if (_event)			_event.session = getSession(scope);		else			_event = new fm.last.as3.LFMEvent(getSession(scope));		switch (method) {			case'attend':				innerHandlersDispatcher = _event.attend(event, status);				break;			case'getAttendees':				innerHandlersDispatcher = _event.getAttendees(event);				break;			case'getInfo':				innerHandlersDispatcher = _event.getInfo(event);				break;			case'getShouts':				innerHandlersDispatcher = _event.getShouts(event);				break;			case'share':				innerHandlersDispatcher = _event.share(event, recipient, publicShare, message);				break;			case'shout':				innerHandlersDispatcher = _event.shout(event, message);				break;			default:				methodUndefined(scope);		}	}}}