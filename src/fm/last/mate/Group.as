generator="{AppController}" method="faultHandler" *                                arguments="{[fault]}" /&gt; *          &lt;/lfm:faultHandlers&gt; *		&lt;/lfm:Group&gt; * &lt;/EventHandlers&gt; * </listing> * * @mxml * <p>The <code>&lt;Group&gt;</code> tag has following tag attributes:</p> * <pre> * &lt;Group * <b>Properties</b> * method='String' * session='ILFMSession' * group='String' * from='Number' * to='Number' * /&gt; * </pre> * * @see fm.last.as3.LFMGroup */public class Group extends LFMServiceInvoker {	public var group:String;	public var from:Number;	public var to:Number;	private var _group:LFMGroup;	[Inspectable(enumeration='getHype,getMembers,getWeeklyAlbumChart,getWeeklyArtistChart,getWeeklyChartList,getWeeklyYrackChart')]	/**	 * @inheritDoc	 */	override public function get method():String { return super.method; }	/**	 * @private	 */	override protected function run(scope:IScope):void {		if (_group)			_group.session = getSession(scope);		else			_group = new LFMGroup(getSession(scope));		switch (method) {			case'getHype':				innerHandlersDispatcher = _group.getHype(group);				break;			case'getMembers':				innerHandlersDispatcher = _group.getMembers(group);				break;			case'getWeeklyAlbumChart':				innerHandlersDispatcher = _group.getWeeklyAlbumChart(group, from, to);				break;			case'getWeeklyArtistChart':				innerHandlersDispatcher = _group.getWeeklyArtistChart(group, from, to);				break;			case'getWeeklyChartList':				innerHandlersDispatcher = _group.getWeeklyChartList(group);				break;			case'getWeeklyTrackChart':				innerHandlersDispatcher = _group.getWeeklyTrackChart(group, from, to);				break;			default:				methodUndefined(scope);		}	}}}