thodInvoker generator="{AppController}" method="faultHandler" *                                arguments="{[fault]}" /&gt; *          &lt;/lfm:faultHandlers&gt; *		&lt;/lfm:Geo&gt; * &lt;/EventHandlers&gt; * </listing> * * @mxml * <p>The <code>&lt;Geo&gt;</code> tag has following tag attributes:</p> * <pre> * &lt;Geo * <b>Properties</b> * method='String' * session='ILFMSession' * location='String' * lat='Number' * long='Number' * page='Number' * distance='Number' * country='String' * metro='String' * start='String' * end='String' * /&gt; * </pre> * * @see fm.last.as3.LFMGeo */public class Geo extends LFMServiceInvoker {	public var location:String;	public var lat:Number;	public var long:Number;	public var page:Number;	public var distance:Number;	public var country:String;	public var metro:String;	public var start:String;	public var end:String;	private var _geo:LFMGeo;	[Inspectable(enumeration='getEvents,getMetroArtistChart,getMetroHypeArtistChart,getMetroHypeTrackChart,getMetroTrackChart,getMetroUniqueArtistChart,getMetroUniqueTrackChart,getMetroWeeklyChartlist,getMetros,getTopArtists,getTopTracks')]	/**	 * @inheritDoc	 */	override public function get method():String { return super.method; }	/**	 * @private	 */	override protected function run(scope:IScope):void {		if (_geo)			_geo.session = getSession(scope);		else			_geo = new LFMGeo(getSession(scope));		switch (method) {			case'getEvents':				innerHandlersDispatcher = _geo.getEvents(location, lat, long, page, distance);				break;			case'getMetroArtistChart':				innerHandlersDispatcher = _geo.getMetroArtistChart(country, metro, start, end);				break;			case'getMetroHypeArtistChart':				innerHandlersDispatcher = _geo.getMetroHypeArtistChart(country, metro, start, end);				break;			case'getMetroHypeTrackChart':				innerHandlersDispatcher = _geo.getMetroHypeTrackChart(country, metro, start, end);				break;			case'getMetroTrackChart':				innerHandlersDispatcher = _geo.getMetroTrackChart(country, metro, start, end);				break;			case'getMetroUniqueArtistChart':				innerHandlersDispatcher = _geo.getMetroUniqueArtistChart(country, metro, start, end);				break;			case'getMetroUniqueTrackChart':				innerHandlersDispatcher = _geo.getMetroUniqueTrackChart(country, metro, start, end);				break;			case'getMetroWeeklyChartlist':				innerHandlersDispatcher = _geo.getMetroWeeklyChartlist();				break;			case'getMetros':				innerHandlersDispatcher = _geo.getMetros(country);				break;			case'getTopArtists':				innerHandlersDispatcher = _geo.getTopArtists(country);				break;			case'getTopTracks':				innerHandlersDispatcher = _geo.getTopTracks(country, location);				break;			default:				methodUndefined(scope);		}	}}}